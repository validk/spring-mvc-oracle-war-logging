<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans
           classpath:org/springframework/beans/factory/xml/spring-beans.xsd
           http://www.springframework.org/schema/context
           classpath:org/springframework/context/config/spring-context.xsd">

    <!-- ===========================
         WebLogic JNDI DataSource
         =========================== -->
    <bean id="dataSource" class="org.springframework.jndi.JndiObjectFactoryBean">
        <!-- Replace with your WebLogic DataSource JNDI name -->
        <property name="jndiName" value="jdbc/YourDataSourceName"/>
        <property name="resourceRef" value="true"/>
    </bean>

    <!-- ===========================
         DAO beans
         =========================== -->
    <bean id="exampleDao" class="com.example.dao.ExampleDao">
        <property name="dataSource" ref="dataSource"/>
    </bean>

    <!-- ===========================
         Service beans
         =========================== -->
    <bean id="exampleService" class="com.example.service.ExampleService">
        <property name="exampleDao" ref="exampleDao"/>
    </bean>

    <!-- ===========================
         Add other beans here
         =========================== -->
    <!-- e.g., messageListener, helper beans, etc. -->

    <!-- ===========================
         Component scanning (optional)
         =========================== -->
    <context:component-scan base-package="com.example"/>
    
</beans>
